{
  "name": "saproto",
  "version": "0.0.2",
  "description": "S.A. Proto Main Website",
  "main": "./public/index.php",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/saproto/saproto.git"
  },
  "keywords": [
    "SAPROTO",
    "Utwente",
    "University of Twente",
    "Laravel",
    "AngularJS",
    "JS",
    "SASS",
    "CSS",
    "Bower",
    "Grunt"
  ],
  "author": "",
  "license": "GNU General Public License (http://www.gnu.org/licenses)",
  "bugs": {
    "url": "https://github.com/saproto/saproto/issues"
  },
  "homepage": "https://github.com/saproto/saproto/tree/master/example",
  "private": false,
  "devDependencies": {
    "bootstrap-sass": "^3.0.0",
    "babel-eslint": "^4.1.4",
    "bower": "^1.3.12",
    "eslint": "^1.9.0",
    "eslint-config-eslint": "^1.0.1",
    "grunt": "^0.4.5",
    "grunt-autoprefixer": "^3.0.0",
    "grunt-bump": "^0.3.0",
    "grunt-cli": "^0.1.13",
    "grunt-contrib-concat": "~0.5.1",
    "grunt-contrib-copy": "^0.8.0",
    "grunt-contrib-cssmin": "^0.13.0",
    "grunt-contrib-uglify": "^0.9.1",
    "grunt-contrib-watch": "~0.6.1",
    "grunt-sass": "^1.0.0",
    "load-grunt-tasks": "^3.1.0",
    "node-sass-import-once": "^1.2.0"
  },
  "paths": {
    "assets": "./public/assets",
    "tmp": "./tmp",
    "javascripts": {
      "src": [
        "./resources/assets/bower/jquery/dist/jquery.min.js",
        "./resources/assets/bower/moment/min/moment.min.js",
        "./resources/assets/bower/bootstrap/dist/js/bootstrap.min.js",
        "./resources/assets/bower/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js",
        "./resources/assets/bower/js-cookie/src/js.cookie.js",
        "./resources/assets/bower/simplemde/dist/simplemde.min.js",
        "./resources/assets/bower/angular/angular.js",
        "./resources/assets/bower/socket.io-client/dist/socket.io.js",
        "./resources/assets/bower/chocolat/dist/js/jquery.chocolat.min.js",
        "./resources/assets/bower/Croppie/croppie.min.js",
        "./resources/assets/bower/ng-img-crop/compile/minified/ng-img-crop.js",
        "./resources/assets/bower/jquery-dateFormat/dist/jquery-dateFormat.min.js",
        "./resources/assets/bower/select2/dist/js/select2.full.min.js"
      ],
      "dest": "application.js",
      "destmin": "application.min.js",
      "watch": [
        "./resources/assets/**/*.js"
      ]
    },
    "stylesheets": {
      "src": [
        "./resources/assets/sass/application.scss"
      ],
      "dest": "application.css",
      "destmin": "application.min.css",
      "watch": [
        "./resources/assets/**/*.scss"
      ]
    },
    "sass": {
      "src": [
        "./resources/assets/sass/framework/**/*.scss",
        "./resources/views/**/*.scss",
        "./resources/assets/bower/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css",
        "./resources/assets/bower/simplemde/dist/simplemde.min.css",
        "./resources/assets/bower/font-awesome/css/font-awesome.css",
        "./resources/assets/bower/on-screen-keyboard/onScreenKeyboard.css",
        "./resources/assets/bower/chocolat/dist/css/chocolat.css",
        "./resources/assets/bower/Croppie/croppie.css",
        "./resources/assets/bower/ng-img-crop/compile/minifiedo/ng-img-crop.css",
        "./resources/assets/bower/select2/dist/css/select2.min.css"
      ],
      "dest": "./resources/assets/sass/components.scss",
      "watch": [
         "./resources/views/**/*.scss",
        "./resources/assets/**/*.scss"
      ]
    }
  }
}
